<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#69B0E8"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="386dp"
        android:layout_height="886dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="229dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="303dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:contentDescription="user"
                app:srcCompat="@drawable/user"
                tools:ignore="ImageContrastCheck" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Phan Đức Kiên"
                    android:textColor="#fff"
                    android:textSize="15pt"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="125"
                android:textColor="#fff"
                android:textSize="20pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-1dp"
                android:text="Friends"
                android:textColor="#fff"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-9dp"
                android:layout_marginLeft="-9dp"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:text="250"
                android:textColor="#fff"
                android:textSize="20pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:text="Fllowes"
                android:textColor="#fff"
                android:textSize="10pt"
                android:textStyle="bold" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="496dp"
            android:background="#fff">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="phankien110302@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#0761A8"
                    android:textColorHint="#0761A8"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="phone"
                    android:text="0374824645"
                    android:textColorHint="#0761A8"
                    tools:ignore="TouchTargetSizeCheck"
                    android:textColor="#0761A8" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Skype"
                    android:textColorHint="#0761A8"
                    tools:ignore="TouchTargetSizeCheck"
                    android:textColor="#0761A8"  />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                <EditText
                    android:id="@+id/editTextTextPersonName5"
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Web"
                    android:textColorHint="#0761A8"
                    tools:ignore="TouchTargetSizeCheck"
                    android:textColor="#0761A8"  />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>